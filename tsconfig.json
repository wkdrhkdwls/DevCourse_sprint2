{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "express"],
    "baseUrl": ".",
    "paths": {
      "@controller/*": ["src/controller/*"],
      "@routes/*": ["src/routes/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@database/*": ["src/database/*"]
    }
  }
}
